<view class="map_container">
<!-- map.wxml -->
<map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="28" controls="{{controls}}"  markers="{{markers}}" bindtap="goMap" polyline="{{polyline}}" bindregionchange="regionchange" show-location></map>
</view>
<view class="map_text">
    <text class="h1">{{textData.name}}</text>
    <text>{{textData.desc}}</text>
</view>
